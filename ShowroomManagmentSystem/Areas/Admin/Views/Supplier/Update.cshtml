@{
}
@model ShowroomManagmentSystem.Models.Supplier
<div class="app-main__inner">

    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="fa-solid fa-earth-americas"></i>
                </div>
                <div>
                    Supplier
                    <div class="page-title-subheading">
                        View, create, update, delete and manage.
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form method="post" asp-area="Admin" asp-controller="Supplier" asp-action="Update" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="SupplierId" />

                        <div class="position-relative row form-group">
                            <label for="SupplierName" class="col-md-3 text-md-right col-form-label">Name</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="SupplierName" id="SupplierName" placeholder="SupplierName" type="text"
                                       class="form-control" asp-for="SupplierName">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="ContactPerson" class="col-md-3 text-md-right col-form-label">Contact Person</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="ContactPerson" id="ContactPerson" placeholder="ContactPerson" type="text"
                                       class="form-control" asp-for="ContactPerson">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="PhoneNumber" class="col-md-3 text-md-right col-form-label">Phone</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="PhoneNumber" id="PhoneNumber" placeholder="PhoneNumber" type="text"
                                       class="form-control" asp-for="PhoneNumber">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="Email" class="col-md-3 text-md-right col-form-label">Email</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="Email" id="Email" placeholder="Email" type="text"
                                       class="form-control" asp-for="Email">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="Website" class="col-md-3 text-md-right col-form-label">Website</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="Website" id="Website" placeholder="Website" type="text"
                                       class="form-control" asp-for="Website">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="TaxCode" class="col-md-3 text-md-right col-form-label">Tax Code</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="TaxCode" id="TaxCode" placeholder="TaxCode" type="text"
                                       class="form-control" asp-for="TaxCode">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="Address" class="col-md-3 text-md-right col-form-label">Address</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="Address" id="Address" placeholder="Address" type="text"
                                       class="form-control" asp-for="Address">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label for="ContractDate" class="col-md-3 text-md-right col-form-label">Contract Date</label>
                            <div class="col-md-9 col-xl-8">
                                <input required name="ContractDate" id="ContractDate" placeholder="ContractDate" type="date"
                                       class="form-control" asp-for="ContractDate">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <div class="display">
                                <label for="status"
                                       class="col-md-3 text-md-right col-form-label">
                                    Status
                                </label>

                                <div class="form-check form-check-inline ml-4">
                                    <label class="form-check-label">
                                        <input class="form-check-input"
                                               type="radio"
                                               asp-for="Status"
                                               value="Active"
                                               checked />
                                        Active
                                    </label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <label class="form-check-label">
                                        <input class="form-check-input"
                                               type="radio"
                                               asp-for="Status"
                                               value="Locked" />
                                        Locked
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="position-relative row form-group mb-1">
                            <div class="col-md-9 col-xl-8 offset-md-2">
                                <a asp-area="Admin" asp-controller="Supplier" asp-action="Index" class="border-0 btn btn-outline-danger mr-1">
                                    <span class="btn-icon-wrapper pr-1 opacity-8">
                                        <i class="fa fa-times fa-w-20"></i>
                                    </span>
                                    <span>Cancel</span>
                                </a>

                                <button type="submit"
                                        class="btn-shadow btn-hover-shine btn btn-primary">
                                    <span class="btn-icon-wrapper pr-2 opacity-8">
                                        <i class="fa fa-download fa-w-20"></i>
                                    </span>
                                    <span>Save</span>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>